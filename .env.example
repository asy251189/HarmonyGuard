# Multilingual Abuse Detection API Configuration

# API Settings
ABUSE_API_DEBUG=false
ABUSE_API_API_HOST=0.0.0.0
ABUSE_API_API_PORT=8000

# Model Configuration
ABUSE_API_MODEL_NAME=unitary/toxic-bert
ABUSE_API_DEVICE=cpu
ABUSE_API_MODEL_CACHE_DIR=./models

# Detection Thresholds
ABUSE_API_DEFAULT_THRESHOLD=0.5
ABUSE_API_BLOCK_THRESHOLD=0.8
ABUSE_API_FLAG_THRESHOLD=0.5

# Rate Limiting
ABUSE_API_RATE_LIMIT_REQUESTS=100
ABUSE_API_RATE_LIMIT_WINDOW=60

# Redis (Optional - for caching and distributed rate limiting)
ABUSE_API_REDIS_ENABLED=false
ABUSE_API_REDIS_URL=redis://localhost:6379

# Logging
ABUSE_API_LOG_LEVEL=INFO